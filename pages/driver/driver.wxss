.driver_infos{
    position: relative;
    line-height: 1.4117;
}
.driver_infos:before {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1rpx solid #D9D9D9;
  color: #D9D9D9;
}

.driver_infos:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1rpx solid #D9D9D9;
  color: #D9D9D9;
}
.driver_btn{
    margin-top: 15px;
    background-color: #66cc99; 
    font-size: 30px;
}



